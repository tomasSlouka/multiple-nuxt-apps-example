{
  "dependencies": {
    "concurrently": "^5.2.0",
    "nuxt": "^2.13.3"
  },
  "scripts": {
    "forum:dev": "nuxt --config-file apps/forum/nuxt.config.js",
    "blog:dev": "nuxt --config-file apps/blog/nuxt.config.js",
    "dev": "concurrently \"npm run forum:dev\" \"npm run blog:dev\"",

    "forum:build": "nuxt build --config-file apps/forum/nuxt.config.js",
    "blog:build": "nuxt build --config-file apps/blog/nuxt.config.js",
    "build": "concurrently \"npm run forum:build\" \"npm run blog:build\"",

    "forum:start": "nuxt start --config-file apps/forum/nuxt.config.js",
    "blog:start": "nuxt start --config-file apps/blog/nuxt.config.js",
    "start": "concurrently \"npm run forum:start\" \"npm run blog:start\"",

    "generate": "nuxt generate"
  }
}
